@inherits LayoutComponentBase

<CascadingValue Value="_clicktrap">
    <div class="page" @onclick="ActivateClicktrap">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                <audio id="notifsound" src="/media/notification.wav" />
                @Body
            </article>
        </main>
    </div>
</CascadingValue>

@code {
    private ClickTrap _clicktrap = new ClickTrap();

    protected void ActivateClicktrap()
    {
        _clicktrap.HasClicked = true;
    }
}
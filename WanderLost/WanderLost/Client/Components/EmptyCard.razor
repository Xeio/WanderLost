<div class="empty-card">
  <div class="empty-card__title">@(MerchantName)&nbsp;(@(Region))</div>
  <div class="empty-card__mokoko" style="background-image: url(/images/EmptyCard.png)" />
  <button class="empty-card__submit-location" onclick="window.location.href = '/UpdateMerchant/@Server/@MerchantName'">Suggest a location</button>
</div>

@code {
  [Parameter, EditorRequired]
  public string MerchantName { get; set; } = default!;

  [Parameter, EditorRequired]
  public string Region { get; set; } = default!;

  [Parameter, EditorRequired]
  public string Server { get; set; } = default!;
}

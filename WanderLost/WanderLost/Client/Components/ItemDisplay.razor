@inject ClientStaticDataController StaticData

<span class="item rarity--@Item.Rarity">@Item.Name
    @if (StaticData.Tooltips.TryGetValue(Item.Name, out var itemText))
    {
        <span class="item__tooltip">@((MarkupString)itemText)</span>
    }
</span>

@code {
    [Parameter, EditorRequired]
    public Item Item { get; init; } = new();
}
